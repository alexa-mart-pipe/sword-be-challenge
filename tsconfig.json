{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src", "models", "/**/*.ts"],
  "exclude": ["node_modules"]
}
